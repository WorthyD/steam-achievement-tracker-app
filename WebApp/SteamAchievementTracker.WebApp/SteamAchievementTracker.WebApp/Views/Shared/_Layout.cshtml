
<html data-ng-app="app" ng-strict-di>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>


    <link href="~/bower_components/winjs/css/ui-dark.min.css" rel="stylesheet" />
    <link href="~/Content/Styles/Main.css" rel="stylesheet" />
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
            </div>
            <div class="navbar-collapse collapse">

            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer></footer>
    </div>
    @*<script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.3.14/angular.min.js"></script>*@
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.3/jquery.min.js"></script>
    @*<script src="https://cdnjs.cloudflare.com/ajax/libs/winjs/3.0.1/js/WinJS.min.js">    </script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/winjs/3.0.1/js/base.min.js">    </script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/winjs/3.0.1/js/en-US/ui.strings.js">    </script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/winjs/3.0.1/js/ui.min.js">    </script>*@
    <script src="~/bower_components/winjs/js/WinJS.min.js"></script>
    <script src="~/Scripts/Utilities/Cookies.js"></script>



    <script src="~/bower_components/angular/angular.js"></script>
    <script src="~/bower_components/angular-animate/angular-animate.js"></script>
    <script src="~/bower_components/angular-route/angular-route.js"></script>
    <script src="~/bower_components/angular-sanitize/angular-sanitize.js"></script>
    <script src="~/bower_components/bootstrap/dist/js/bootstrap.js"></script>
    <script src="~/bower_components/toastr/toastr.js"></script>
    <script src="~/bower_components/moment/moment.js"></script>
    <script src="~/bower_components/extras.angular.plus/ngplus-overlay.js"></script>
    <script src="~/bower_components/angular-bootstrap/ui-bootstrap.min.js"></script>
    <script src="~/bower_components/angular-winjs/js/angular-winjs.js"></script>
    <script src="~/bower_components/angular-indexed-db/angular-indexed-db.js"></script>
    @*<script src="~/bower_components/progressbar.js/dist/progressbar.min.js"></script>*@
    @{


        List<string> scripts = new List<string>(){
    "~/Scripts/App/app.module.js",
    "~/Scripts/App/blocks/exception/exception.module.js",
    "~/Scripts/App/blocks/exception/exception-handler.provider.js",
    "~/Scripts/App/blocks/exception/exception.js",
    "~/Scripts/App/blocks/logger/logger.module.js",
    "~/Scripts/App/blocks/logger/logger.js",
    "~/Scripts/App/blocks/router/router.module.js",
    "~/Scripts/App/blocks/router/routehelper.js",
    "~/Scripts/App/Core/core.module.js",
    "~/Scripts/App/Core/constants.js",
    "~/Scripts/App/Core/config.js",
    "~/Scripts/App/Core/dataservice.js",

    "~/Scripts/App/Core/authservice.js",
    "~/Scripts/App/Core/datastore.js",

    "~/Scripts/App/Core/web/profileservice.js",

    "~/Scripts/App/Core/Offline/profile.js",

    //<!-- Layout -->
    "~/Scripts/App/Layout/layout.module.js",
    "~/Scripts/App/Layout/shell.js",
    "~/Scripts/App/Layout/sidebar.js",
    "~/Scripts/App/Layout/topnav.js",

    // <!-- Login -->
    "~/Scripts/App/login/login.module.js",
    "~/Scripts/App/login/login.js",
    "~/Scripts/App/login/config.route.js",


    //<!-- Widget Modueles-->
    "~/Scripts/App/widgets/widgets.module.js",
    "~/Scripts/App/widgets/ccSidebar.js",
    "~/Scripts/App/widgets/ccSpinner.js",
    "~/Scripts/App/widgets/ccWidgetClose.js",
    "~/Scripts/App/widgets/ccWidgetHeader.js",
    "~/Scripts/App/widgets/ccWidgetMinimize.js",

    //<!-- Dashboard-->
    "~/Scripts/App/dashboard/dashboard.module.js",
    "~/Scripts/App/dashboard/config.route.js",
    "~/Scripts/App/dashboard/dashboard.js",
    "~/Scripts/App/dashboard/profile.js"

        };
        foreach (var s in scripts) {
            <text>
                <script src="@Url.Content(s)?t=@DateTime.Now.Ticks"></script>
            </text>
        }
    }
</body>
</html>
