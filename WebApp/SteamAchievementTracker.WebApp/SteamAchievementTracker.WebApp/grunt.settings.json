{
    "css": {
        "src": "content/sass/main.scss",
        "dist": "content/styles/",
        "distfilename": "main",
        "workingdirectory": [ "content/sass/*.scss" ]
    },
    "js": {
        "developmentmap": {
            "dist/modules.js": [ "app/*.modules.js", "app/**/*.module.js" ],
            "dist/main.js": [
                "app/*.js",
                "app/**/*.js",
                "!app/*.modules.js",
                "!app/**/*.module.js"
            ]
        },
        "productionmap": {
            "dist/modules.min.js": [ "app/*.modules.js", "app/**/*.module.js" ],
            "dist/main.min.js": [
                "app/*.js",
                "app/**/*.js",
                "!app/*.modules.js",
                "!app/**/*.module.js"
            ]
        },
        "workingdirectory": [ "app/**/*.js", "app/*.js" ]
    }
}