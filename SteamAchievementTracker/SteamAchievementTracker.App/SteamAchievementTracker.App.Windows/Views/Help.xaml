                            </TextBlock>
                        </StackPanel>
                    </Grid>
                </DataTemplate>
            </HubSection>
            <HubSection x:Uid="help2Header">
                <DataTemplate>
                    <Grid>
                        <ListView ItemsSource="{Binding FAQs}" Width="300">
                            <!--<ListView.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <StackPanel >
                                        <TextBlock Style="{StaticResource FAQTitle}"  Text="{Binding Title}"></TextBlock>
                                        <TextBlock Style="{StaticResource FAQDescription}" Text="{Binding Description}"></TextBlock>
                                    </StackPanel>
 
                                </ItemsPanelTemplate>
                            </ListView.ItemsPanel>-->
                            <ListView.ItemTemplate >
                                <DataTemplate >
                                    <StackPanel Width="300">
                                        <TextBlock>Testing</TextBlock>
                                        <TextBlock Style="{StaticResource FAQTitle}"  Text="{Binding Title}"></TextBlock>
                                        <TextBlock Style="{StaticResource FAQDescription}" Text="{Binding Description}"></TextBlock>
                                    </StackPanel>
                                </DataTemplate>
                            </ListView.ItemTemplate>
                        </ListView>

                        <!--<GridView ItemsSource="{Binding FAQs}" ItemsPanel="{StaticResource VariableSizedItemTemplate}">
                            <GridView.ItemTemplate>
                                <DataTemplate >
                                    <StackPanel >
                                        <TextBlock Style="{StaticResource FAQTitle}"  Text="{Binding Title}"></TextBlock>
                                        <TextBlock Style="{StaticResource FAQDescription}" Text="{Binding Description}"></TextBlock>
                                    </StackPanel>
                                </DataTemplate>

                            </GridView.ItemTemplate>

                        </GridView>-->
                    </Grid>
                </DataTemplate>
            </HubSection>
            <HubSection x:Uid="help3Header">
                <DataTemplate>
                    <Grid>

                        <Button Command="{Binding SendFeedback}">Send feedback</Button>

                    </Grid>
                </DataTemplate>
            </HubSection>

        </Hub>
    </Grid>


</Page>
